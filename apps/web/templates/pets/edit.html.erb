<h1>Edit pet</h1>

<% unless params.valid? %>
  <div class="errors">
    <h3>There was a problem with your pet</h3>
    <ul>
      <% params.errors.each do |error| %>
        <%# TODO Improve error messages %>
        <li><%= error.attribute_name %> => <%= error.validation %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%=
  form_for :pet, routes.pet_path(pet.id), method: :patch, enctype: 'multipart/form-data' do
    text_field :name, value: pet.name, placeholder: 'name'
    file_field :image

    submit 'Update'
  end
%>

