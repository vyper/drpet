<%# TODO: DRY %>
<% if logged_user? %>
  <%=
    form_for :user, routes.destroy_user_session_path, method: :delete do
      submit 'Logout'
    end
  %>
<% end %>

<h1>Pets</h1>

<% if pets.any? %>
  <ul>
    <% pets.each do |pet| %>
      <li>
        <%= pet.name %>
        <%=
          form_for :pet, routes.pet_path(pet.id), method: :delete do
            submit 'Destroy'
          end
        %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No pets</p>
<% end %>
